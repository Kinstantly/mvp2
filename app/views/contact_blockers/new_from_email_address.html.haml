#content
	.unsubscribe.wider_form
		%h1= t 'views.contact_blocker.edit.unsubscribe_title'
		= form_for @contact_blocker, url: create_contact_blocker_from_email_address_path(delivered_email_address: @contact_blocker.email) do |f|
			= f.error_messages
			
			.text_field
				= f.label :email
				%br
				= f.email_field :email
				
				%p= t 'views.contact_blocker.edit.unsubscribe_note'
				
			.buttons
				= f.submit t('views.contact_blocker.edit.unsubscribe_submit'), class: 'default', data: { disable_with: t('views.contact_blocker.edit.unsubscribe_submit_disable') }
