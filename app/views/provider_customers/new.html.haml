= form_for @provider_customer do |f|
	= f.error_messages
	-# .required_tip= t 'views.required'
	- amount = 800
	= hidden_field_tag :authorization_amount, amount
	= hidden_field_tag :profile_id, params[:profile_id]
	%script{src: 'https://checkout.stripe.com/checkout.js', class: 'stripe-button', 'data-key' => Rails.configuration.stripe[:publishable_key], 'data-description' => t('views.provider_customer.edit.authorization_title'), 'data-amount' => "#{amount}", 'data-email' => current_user.email, 'data-panel-label' => 'Authorize {{amount}}', 'data-allow-remember-me' => 'false', 'data-label' => t('views.provider_customer.edit.authorization_button')}
