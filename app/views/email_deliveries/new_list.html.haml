.edit
	= render partial: 'shared/nav_title', locals: { title: t('views.email_delivery.edit.create_list_title') }
	%p#alert= @alert
	
	#forms
		= form_tag create_list_email_deliveries_path, class: 'simple_form' do
			.input.string.optional
				= label_tag :sender, EmailDelivery.human_attribute_name(:sender), class: 'string optional control-label'
				= text_field_tag :sender, @sender, size: '60', class: 'string optional'
			.input.string.optional
				= label_tag :email_type, EmailDelivery.human_attribute_name(:email_type), class: 'string optional control-label'
				= text_field_tag :email_type, @email_type, size: '60', class: 'string optional'
			.input.string.required
				= label_tag :email_list, t('views.email_delivery.edit.email_list'), class: 'string required control-label'
				= text_area_tag :email_list, @email_list, size: '60x24', placeholder: t('views.email_delivery.edit.email_list_tip'), class: 'string required'
			= submit_tag t('views.email_delivery.edit.create_list'), class: 'btn'
			= link_to t('views.cancel'), email_deliveries_path
	
= render partial: 'shared/save_changes_prompt'
