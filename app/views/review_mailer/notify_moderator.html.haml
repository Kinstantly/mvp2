%html
	%body
		New review for #{@review.profile.company_otherwise_display_name} by #{@review.reviewer_username}:
		%br
		%br
		- if @review.title.present?
			= label :review, :title
			%p{:style => "padding: 5px;font-style: italic"}= @review.title
			%br
		- if @review.body.present?
			= label :review, :body
			%p{:style => "padding: 5px;font-style: italic"}= @review.body
			%br
		- if @review.good_to_know.present?
			= label :review, :good_to_know
			%p{:style => "padding: 5px;font-style: italic"}= @review.good_to_know
		%br 
		= link_to 'Edit/Delete review', edit_plain_profile_url(@review.profile) + "#edit_review_div_#{@review.id}"
