- @page_title = "#{company_name} - Edit category '#{@category.name}'"
.edit
	%h1= "Edit category '#{@category.name}'"
	#top_bar
		%nav.buttons
			= admin_link
			= link_to 'Categories', categories_path
			= link_to 'Services', services_path
			= link_to 'Specialties', specialties_path
	#forms
		= simple_form_for @category do |f|
			= f.input :name, required: true
			= f.input :is_predefined
			= f.association :services, as: :check_boxes, collection: Service.predefined
			= f.button :submit
			= link_to 'Cancel', categories_path
		- if can?(:destroy, @category)
			= form_for @category, method: :delete, html: {id: 'destroy_category', class: 'destroy_button'} do |f|
				= f.submit t('views.category.edit.destroy_button'), disable_with: 'Trashing...', confirm: t('views.category.edit.destroy_confirm')
	#links
		%h1= Category.human_attribute_name :services
		%ul
			- @category.services.each do |record|
				%li= link_to record.name, edit_service_path(record), class: 'name'
