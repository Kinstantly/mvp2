- @page_title = "#{company_name} - New category"
.edit
	#top_bar
		%nav.buttons
			= admin_link
			= link_to 'Categories', categories_path
			= link_to 'Services', services_path
			= link_to 'Specialties', specialties_path
	#forms
		= simple_form_for @category do |f|
			= f.input :name, required: true
			= f.input :is_predefined
			= f.association :services, as: :check_boxes, collection: Service.predefined
			= f.button :submit
			= link_to 'Cancel', categories_path
