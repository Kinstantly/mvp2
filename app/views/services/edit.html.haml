- @page_title = "#{company_name} - Edit service '#{@service.name}'"
.edit
	%h1= "Edit service '#{@service.name}'"
	#top_bar
		%nav.buttons
			= admin_link
			= link_to 'Categories', categories_path
			= link_to 'Services', services_path
			= link_to 'Specialties', specialties_path
	#forms
		= simple_form_for @service do |f|
			= f.input :name, required: true
			= f.input :is_predefined
			= f.association :specialties, as: :check_boxes, collection: Specialty.predefined
			= f.button :submit
			= link_to 'Cancel', services_path
		- if can?(:destroy, @service)
			= form_for @service, method: :delete, html: {id: 'destroy_service', class: 'destroy_button'} do |f|
				= f.submit t('views.service.edit.destroy_button'), disable_with: 'Trashing...', confirm: t('views.service.edit.destroy_confirm')
	#links
		%h1= Service.human_attribute_name :categories
		%ul
			- @service.categories.each do |record|
				%li= link_to record.name, edit_category_path(record), class: 'name'
		%h1= Service.human_attribute_name :specialties
		%ul
			- @service.specialties.each do |record|
				%li= link_to record.name, edit_specialty_path(record), class: 'name'
