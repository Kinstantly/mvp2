- company_name = "#{t('company.name')}"
- tagline = "#{t('company.short_tagline')}"
- alpha_note = "#{t('company.alpha_note')}"
-if params[:is_private_alpha]
	#content
		.content-wrapper.two-column.logo-wallpaper
			.column.left-rail
			.column.main-column
				.mid-aligned
					%h2.highlight= company_name
					%p.tagline= tagline
					%p.alpha_note= alpha_note
				#tabs.ui-tabs.ui-widget.ui-widget-content.ui-corner-all
					%ul.ui-tabs-nav.ui-helper-reset.ui-helper-clearfix.ui-corner-all
						%li
							=link_to 'Sign up', "#sign_up"
						%li
							=link_to 'Already a member? Sign in', "#sign_in"
					#sign_up.sign_up.generic_form
						= render partial: "devise/shared/alpha_signup", locals:{ embedded_in: true }
					#sign_in.sign_in.generic_form
						= render partial: "devise/shared/alpha_signin", locals:{ embedded_in: true }
-else
	#content.inner_content_wrapper.home.contact
		#tabs.ui-tabs.ui-widget.ui-widget-content.ui-corner-all
			%ul.ui-tabs-nav.ui-helper-reset.ui-helper-clearfix.ui-corner-all
				%li
					=link_to 'Join Kinstantly', "#sign_up"
				%li
					=link_to 'Already a member? Sign in', "#sign_in"
			#sign_up.sign_up.generic_form
				= render partial: "devise/shared/signup", locals:{ embedded_in: true }
			#sign_in.sign_in.generic_form
				= render partial: "devise/shared/signin", locals:{ embedded_in: true }
		%br
		= render "devise/shared/links"

:javascript
	$("#tabs").tabs();
