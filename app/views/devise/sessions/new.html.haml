.sign_in
	%h2 Login

	= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
		.email
			= f.label :email
			= f.email_field :email

		.password
			= f.label :password
			= f.password_field :password

		- if devise_mapping.rememberable?
			.remember_me
				= f.check_box :remember_me
				= f.label :remember_me

		.buttons
			= f.submit 'Login'

	= render "devise/shared/links"
