- embedded_in ||= false
.sign_in.generic_form.smaller_form
	%h1= t 'views.sign_in.label' unless embedded_in
	= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
		= hidden_field_tag :is_private_alpha, params[:is_private_alpha]
		
		.email.text_field
			= f.label :email
			%br
			= f.email_field :email

		.password.text_field
			= f.label :password
			%br
			= f.password_field :password, autocomplete: 'off'

		- if devise_mapping.rememberable?
			.remember_me
				= f.check_box :remember_me
				= f.label :remember_me

		.buttons
			= f.submit t('views.sign_in.label'), disable_with: t('views.sign_in.label'), class: 'default', id: 'sign_in_button'
		%br
		= render "devise/shared/links"