#content
	.password.generic_form
		%h1= t 'devise.passwords.new_password_title'
		= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |f|
			= devise_error_messages!
			.email.text_field
				= f.label :email
				= f.email_field :email
			.buttons= f.submit t('views.passwords.new_password_submit'), data: { disable_with: t('devise.passwords.new_password_submit_disable') }, class: 'default auto_width'
		= render "devise/shared/links"
