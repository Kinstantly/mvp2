#content
	.password.generic_form
		%h1= t 'devise.passwords.edit_password_title'
		= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f|
			= devise_error_messages!
			= f.hidden_field :reset_password_token
			.password.text_field
				= f.label :password, t('devise.passwords.edit_password_label')
				= f.password_field :password, autocomplete: 'off'
			.password_confirmation.text_field
				= f.label :password_confirmation
				= f.password_field :password_confirmation, autocomplete: 'off'
			.buttons= f.submit t('devise.passwords.edit_password_submit'), data: { disable_with: t('devise.passwords.edit_password_submit_disable') }, class: 'default auto_width'
		= render "devise/shared/links"
