#content
	.unlock.generic_form
		%h1= t 'devise.unlocks.new_unlock_title'
		= form_for resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post } do |f|
			= devise_error_messages!
			.email.text_field
				= f.label :email
				= f.email_field :email
			.buttons= f.submit t('devise.unlocks.new_unlock_submit'), disable_with: t('devise.unlocks.new_unlock_submit_disable'), class: 'default'
		= render "devise/shared/links"
