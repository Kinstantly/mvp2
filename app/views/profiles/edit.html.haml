- @body_class ||= 'interior edit'
.editor_buttons
	= profile_link @profile
	= full_profile_link @profile
	= edit_full_profile_link @profile
	- if !@profile.claimed?
		= new_invitation_profile_link @profile
	= admin_profiles_link
	- if can?(:destroy, @profile)
		= render partial: 'destroy', locals: {profile: @profile}
%article#content
	%header#content-header.clearfix
		= image_tag 'profile-photo.jpg', alt: "#{@profile.display_name_or_company}", width: '168', height: '168', border: '0', class: 'profile-photo', itemprop: 'image'
		.profile{itemscope: "", itemtype: "http://schema.org/Person"}
			#display_name.formlet
				= render partial: 'formlet', locals: {formlet: 'display_name'}
			= render partial: 'profiles/rating_score', locals: {profile: @profile}
			#job.formlet
				= render partial: 'formlet', locals: {formlet: 'job'}
			%span.location.editable{itemprop: "street-address"} 1234 Dolores St, San Francisco, CA 94110
			%span.location.editable{itemprop: "telephone"} (415) 555-0123
			#internet.formlet
				= render partial: 'formlet', locals: {formlet: 'internet'}
		%ul.contact-toolbar.editable
			%li#consult_by_email= profile_consult_by_email_link @profile
			%li#consult_by_phone= profile_consult_by_phone_link @profile
			%li#visit_home= profile_visit_home_link @profile
			%li#appointment
				%a{href: "#"} Make an appointment
	%section#details.clearfix
		.interior
			.summary-text
				#summary.formlet.editable
					= render partial: 'formlet', locals: {formlet: 'summary'}
				#services.formlet.editable
					= render partial: 'formlet', locals: {formlet: 'services'}
			%table.info{border: "0", cellpadding: "0", cellspacing: "0"}
				%tr
					%th
						%span.editable Hours
					%td Monday - Friday, 8am - 5pm
				%tr
					%th
						%span.editable Ages
					%td 0-12
				%tr
					%th
						%span.editable Languages
					%td English, Spanish
				%tr
					%th
						%span.editable Education
					%td Medical Degree, University of Washington
				%tr
					%th
						%span.editable Licenses / Certifications
					%td licensed in California
				%tr
					%th
						%span.editable Insurance
					%td Blue Shield of CA, Aetna, Blue Cross
				%tr
					%th
						%span.editable Rates
					%td $150/hour
:coffeescript
	$('.formlet').click -> $(this).addClass 'active'
