						<input type="text" name="provider" id="provider" autocomplete="off" value="doctor, tutor, therapist..." onfocus="this.value=''">
						<div class="select-wrapper">
						<span class="select-text"></span>
						<select>
						<option selected="selected">San Francisco, CA</option>
						<option>Another Place, CA</option>
						<option>Anywhere</option>
						</select>
						</div>
