.rate_provider_form
	- @rate_provider_class = 'rate_provider'
	- name = "rate_provider_#{profile.id}"
	= "#{profile.ratings.size > 0 ? 'Rate' : 'Be the first to rate'} #{profile.display_name_or_company}:"
	= form_tag rate_profile_path(profile) do
		- current_user_score = profile.rating_by(current_user).try(:score).try(:round).presence || -1
		- (1..5).each do |i|
			= radio_button_tag "#{name}", i, (i == current_user_score), class: "#{@rate_provider_class} #{name}"

:coffeescript
	$("input.#{name}").rating(callback: (value, link) -> $.post('#{rate_profile_path profile}', score: value))
