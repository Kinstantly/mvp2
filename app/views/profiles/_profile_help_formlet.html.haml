- info_email = "#{t('contact.emails.info.value')}@#{t('email_domain')}"
= link_to "Profile help", "#", class: 'profile-help-link editable'
.ui-helper-clearfix
.popover
	= form_for @current_user, url: update_profile_help_user_path(@current_user), remote: true, html: {id: "edit-profile-help"} do |f|
		= f.submit "#{t('views.profile.edit.profile_help_close_button_1')} X", data: { disable_with: "#{t('views.profile.edit.profile_help_close_button_1')} X" }, onclick: '$(this).submit();my_vars.f.close_formlets();', class: 'close-link dont_popover'
		%p.errorExplanation
		%h2
			Welcome to your profile!
		= f.hidden_field :profile_help, value: false
		%p.edit-tip
			Click on a blue pencil 
			%span.editable-icon
			to edit that field.
		%h1
			Here are 5 tips to get you started:
		%ol
			%li
				Be sure to hit the save button at the bottom of the pop-up window for each field you add or edit &mdash; so you can save as you go and come back to finish later.
			%li
				Start at the top of your profile, with your name, website (if any), and phone number. This means that parents and prospective clients can get in touch with you even while youâ€™re still working on the rest of your profile.
			%li
				Add your physical address (or at least a city, state, and ZIP code), so a map will appear with your profile -- and so you'll appear in local search results.
			%li
				Add a photo of you (parents tell us they like warm and smiling photos best).
			%li
				Take advantage of our Facebook "like" button and ratings and reviews to gather support from clients who love you!
		%p
			Questions? Concerns? Comments? Please email us at
			= succeed '.' do
				= mail_to info_email
		%p
			= f.submit t('views.profile.edit.profile_help_close_button_2'), data: { disable_with: t('views.profile.edit.profile_help_close_button_2') }, onclick: '$(this).submit();my_vars.f.close_formlets();', class: 'save regular dont_popover'
			= f.submit t('views.profile.edit.profile_help_close_button_1'), data: { disable_with: t('views.profile.edit.profile_help_close_button_1') }, onclick: '$(this).submit();my_vars.f.close_formlets();', class: 'save mobile dont_popover'
