- formlet ||= @formlet
= render partial: "#{formlet}_formlet", locals: {formlet: formlet}
-# We need ruby interpolation, so avoid coffeescript.
-# For cancel click, return false to prevent click action and to
-#   prevent reactivation by stopping propagation to the parent formlet element.
:javascript
	$('##{formlet} .cancel').click(function(e) {
		$('##{formlet}').removeClass('active');
		return false;
	});
