.profile_index
	.buttons
		= admin_create_profile_link
		= admin_change_profile_list_link
	.profile_list{align: 'center'}
		%table
			%thead
				%tr
					%th Name
					%th Company name
					- if can? :manage, Profile
						%th Published?
						%th Claimed by
					- if current_user.try(:admin?)
						%th.large Admin notes
						%th Lead generator
					%th Website
					%th Headline
					%th Address
					%th Search region
					%th= current_user.try(:admin?) ? 'Public email' : 'Email'
					%th Mobile
					%th Office
					%th.large Categories
					%th.large Jobs or Services
					%th.large Specialties
					%th.large My specialties
					%th Ages
					%th Consultations
					%th Visitations
					%th.large Education
					%th Licenses, certifications
					%th Languages
					%th.large Insurance accepted
					%th.large Summary
					%th Rates
					%th.large Availability
					%th.large Office hours
					%th.large Phone consultation hours
					%th.large Video consultation hours
			%tbody
				- @profiles.sort{|a, b| (a.last_name || '').casecmp (b.last_name || '')}.each do |p|
					%tr
						%td= profile_list_name_link p
						%td= p.try(:company_name)
						- if can? :manage, Profile
							%td= p.try(:is_published) ? 'Published' : 'Not published'
							%td= p.try(:claimed?) ? p.user.email : 'Not claimed'
						- if current_user.try(:admin?)
							%td= p.try(:admin_notes)
							%td= p.try(:lead_generator)
						%td= p.try(:url)
						%td= p.try(:headline)
						%td= "#{location_display_address p.try(:locations).try(:first)}"
						%td= p.try(:locations).try(:first).try(:search_area_tag).try(:name)
						%td= p.try(:email)
						%td= p.try(:mobile_phone)
						%td= p.try(:office_phone)
						%td= profile_display_categories p
						%td= profile_display_services p
						%td= profile_display_specialties p
						%td= p.specialties_description
						%td= profile_age_ranges p
						%td= profile_display_consultation_modes p
						%td= profile_display_visitation_modes p
						%td.text_area= preserve p.try(:education)
						%td.text_area= preserve p.try(:certifications)
						%td.text_area= preserve p.try(:languages)
						%td.text_area= preserve p.try(:insurance_accepted)
						%td.text_area= preserve p.try(:summary)
						%td.text_area= preserve p.try(:rates)
						%td.text_area= preserve p.try(:availability)
						%td.text_area= preserve p.try(:office_hours)
						%td.text_area= preserve p.try(:phone_hours)
						%td.text_area= preserve p.try(:video_hours)
