.profile_index
	.buttons
		= admin_create_profile_link
	.profile_list{align: 'center'}
		%table
			%thead
				%tr
					%th Name
					%th Company name
					%th Website
					%th Headline
					%th Address
					%th Public email
					%th Mobile
					%th Office
					%th.large Categories
					%th.large Specialties
					%th Ages
					%th Consultations
					%th Visitations
					%th Education
					%th.large Experience
					%th Licenses, certifications
					%th Honors and awards
					%th Languages
					%th.large Summary
					%th Insurance
			%tbody
				- @profiles.each do |p|
					%tr
						%td= link_to profile_display_name(p), edit_profile_path(p)
						%td= p.try(:company_name)
						%td= p.try(:url)
						%td= p.try(:headline)
						%td= "#{profile_address p} #{p.try(:postal_code)}"
						%td= p.try(:email)
						%td= p.try(:mobile_phone)
						%td= p.try(:office_phone)
						%td= profile_display_categories(p)
						%td= profile_display_specialties(p)
						%td= profile_age_ranges p
						%td= profile_display_consultation_modes p
						%td= profile_display_visitation_modes p
						%td= p.try(:education)
						%td= p.try(:experience)
						%td= p.try(:certifications)
						%td= p.try(:awards)
						%td= p.try(:languages)
						%td= p.try(:summary)
						%td= p.try(:insurance_accepted) ? 'Accepted' : 'Not accepted'