.edit_profile
	= form_for @user, url: update_user_profile_path do |uf|
		= uf.error_messages
		= render partial: 'profiles/info_area'
		.account_areas
			.basic_account
				.email
					= uf.label :email, 'Your login email', class: 'required'
					= uf.text_field :email
					%span.note We also use this email to contact you.
				.phone
					= uf.label :phone, "Phone number we use to contact you"
					= uf.text_field :phone
		= uf.fields_for :profile do |f|
			= render partial: 'profiles/form', locals: {f: f, country: profile_country(@user.profile)}
		.buttons
			= uf.submit 'Save'
			= link_to "Cancel", view_user_profile_path
