.edit_profile
	= form_for @user, url: update_profile_path do |uf|
		= uf.error_messages
		= uf.fields_for :profile do |f|
			.profile_areas
				.basic_profile
					.first_name
						= f.label :first_name, 'First name'
						= f.text_field :first_name
						= f.label :middle_initial, 'Middle initial'
						= f.text_field :middle_initial, size: 1
					.last_name
						= f.label :last_name, 'Last name'
						= f.text_field :last_name
					.credentials
						= f.label :credentials, "Degrees/credentials"
						= f.text_field :credentials
					.email
						= uf.label :email, "Email"
						= uf.text_field :email
					.company_name
						= f.label :company_name, 'Company name'
						= f.text_field :company_name
					.url
						= f.label :url, 'Website'
						= f.text_field :url
				.location_contact_profile
					.address
						= f.label :address1, "Address"
						= f.text_field :address1
						= f.text_field :address2
					.city_state
						= f.label :region, "City"
						= f.text_field :city
						= f.label :region, "State"
						= f.text_field :region, size: 2
					.postal_code
						= f.label :postal_code, "Zip code"
						= f.text_field :postal_code
						= f.hidden_field :country, value: profile_country
					.mobile_phone
						= f.label :mobile_phone, "Mobile"
						= f.text_field :mobile_phone
					.office_phone
						= f.label :office_phone, "Office"
						= f.text_field :office_phone
				.professional_profile
					.headline
						= f.label :headline, "Professional headline"
						= f.text_field :headline, size: 50
					.education
						= f.label :education, "Education"
						= f.text_area :education, size: '50x5'
					.experience
						= f.label :experience, "Experience"
						= f.text_area :experience, size: '50x5'
					.certifications
						= f.label :certifications, "Certifications"
						= f.text_field :certifications
					.awards
						= f.label :awards, "Honors and awards"
						= f.text_area :awards, size: '50x5'
					.languages
						= f.label :languages, "Languages"
						= f.text_field :languages
					.summary
						= f.label :summary, "Summary"
						= f.text_area :summary, size: '50x8'
					.specialties
						= f.label :specialties, "Specialties"
						= f.text_field :specialties
					.insurance_accepted
						= f.label :insurance_accepted, "Insurance accepted"
						= f.check_box :insurance_accepted
			.buttons
				= uf.submit 'Save'
				= link_to "Cancel", view_profile_path
