.view_profile
	.buttons
		= link_to "Edit profile", edit_user_profile_path
	.account_areas
		.basic_account
			.email
				Account email:
				= @user.email
	.profile_areas
		.basic_profile
			.display_name
				Name:
				= user_profile_display_name
			.email
				Public email:
				= @profile.email
			.company_name
				Company name:
				= @profile.company_name
			.url
				Website:
				= @profile.url
			.headline
				%span.label Professional headline:
				%br
				.value= @profile.headline
		.location_contact_profile
			.address
				Address:
				= user_profile_address
				= @profile.postal_code
			.mobile_phone
				Mobile:
				= @profile.mobile_phone
			.office_phone
				Office:
				= @profile.office_phone
		.professional_profile
			.category
				%span.label Category:
				= @profile.category.try(:name)
			.subcategory
				%span.label Subcategory:
				= @profile.subcategory
			.age_ranges
				%span.label Ages:
				= user_profile_age_ranges
			.education
				%span.label Education:
				%br
				.value= @profile.education
			.experience
				%span.label Professional experience:
				%br
				.value= @profile.experience
			.certifications
				%span.label Licenses, certifications:
				%br
				.value= @profile.certifications
			.awards
				%span.label Honors and awards:
				%br
				.value= @profile.awards
			.languages
				%span.label Languages:
				%br
				.value= @profile.languages
			.summary
				%span.label Summary:
				%br
				.value= @profile.summary
			.specialties
				%span.label Specialties
				%br
				.value= @profile.specialties
			.insurance_accepted
				%span.label= @profile.insurance_accepted ? 'Insurance accepted' : 'Insurance not accepted'