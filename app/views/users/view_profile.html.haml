.view_profile
	.buttons
		= edit_profile_link
	.account_areas
		.basic_account
			.email
				Your login email:
				= @user.email
				%span.note We also use this email to contact you.
			.phone
				Phone number we use to contact you:
				= @user.phone
	.profile_areas
		.basic_profile
			.display_name
				Name:
				= profile_display_name @profile
			.email
				Public email:
				= @profile.email
			.company_name
				Company name:
				= @profile.company_name
			.url
				Website:
				= @profile.url
			.headline
				%span.label Professional headline:
				%br
				.value= @profile.headline
		.location_contact_profile
			.address
				Address:
				= profile_address @profile
				= @profile.postal_code
			.mobile_phone
				Mobile:
				= @profile.mobile_phone
			.office_phone
				Office:
				= @profile.office_phone
		.professional_profile
			.categories
				%span.label Categories:
				= profile_display_categories @profile
			.specialties
				%span.label Specialties:
				= profile_display_specialties @profile
			.age_ranges
				%span.label Ages:
				= profile_age_ranges @profile
			.education
				%span.label Education:
				%br
				.value= @profile.education
			.experience
				%span.label Professional experience:
				%br
				.value= @profile.experience
			.certifications
				%span.label Licenses, certifications:
				%br
				.value= @profile.certifications
			.awards
				%span.label Honors and awards:
				%br
				.value= @profile.awards
			.languages
				%span.label Languages:
				%br
				.value= @profile.languages
			.summary
				%span.label Summary:
				%br
				.value= @profile.summary
			.insurance_accepted
				%span.label= @profile.insurance_accepted ? 'Insurance accepted' : 'Insurance not accepted'